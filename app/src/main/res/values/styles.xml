<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/colorbar</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.Text" parent="TextAppearance.AppCompat" />

    <style name="popuAnim">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>
    <style name="bottonshow">
        <item name="android:windowEnterAnimation">@anim/window_enter</item>
        <item name="android:windowExitAnimation">@anim/window_exit</item>
    </style>
    <style name="TitleMaxline">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="popmenu_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/show</item>
        <item name="android:windowExitAnimation">@anim/hide</item>
    </style>
    <style name="popfrombottom">
        <item name="android:windowEnterAnimation">@anim/enter_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/exit_from_bottom</item>
    </style>
</resources>
