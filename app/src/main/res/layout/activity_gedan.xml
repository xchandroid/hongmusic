<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
<android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="250dp">
    <net.opacapp.multilinecollapsingtoolbar.CollapsingToolbarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:contentScrim="?attr/colorPrimary"
        app:expandedTitleMarginStart="5dp"
        android:id="@+id/collasping_toolbar"
        app:maxLines="3"
        app:expandedTitleTextAppearance="@style/TitleMaxline"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">
       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:fitsSystemWindows="true"
           app:layout_collapseMode="parallax">
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:fitsSystemWindows="true"
               android:scaleType="centerCrop"
               android:id="@+id/gedan_bg"/>
           <com.vaiyee.hongmusic.GradualTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/comment"
               android:textSize="15sp"
               android:layout_gravity="center"
               android:layout_margin="10dp"
               android:text="一切尽在不言中，有时候不需要太多的语言，也许那些语言就是讲出来也是平淡无光，只需要我们用心去沟通，心灵交融就够了。"
              />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="end|bottom"
               android:text=""
               android:textSize="15sp"
               android:id="@+id/publish_time"
               android:layout_margin="10dp"
               android:textColor="@color/black"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="bottom|left"
               android:textColor="@color/black"
               android:id="@+id/total"
               android:text=""
               android:layout_margin="10dp"/>
       </FrameLayout>
       <android.support.v7.widget.Toolbar
           android:layout_width="match_parent"
           android:layout_height="50dp"
           app:contentInsetStart="0dp"
           android:id="@+id/toolbar"
           app:layout_collapseMode="pin">
       </android.support.v7.widget.Toolbar>
    </net.opacapp.multilinecollapsingtoolbar.CollapsingToolbarLayout>
</android.support.design.widget.AppBarLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gedan_list"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    </android.support.v7.widget.RecyclerView>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|center"
      android:layout_marginBottom="5dp"
      android:visibility="gone"
      android:id="@+id/loading_footer">
      <include layout="@layout/loading_footer"/>
  </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/shoucang"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="15dp"
        android:visibility="gone"
        android:id="@+id/shoucang"
        app:backgroundTint="@color/white"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/bottom_pannel"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/quxiao"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="106dp"
            android:text="取消" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:id="@+id/start_download"
            android:layout_toStartOf="@+id/quxiao"
            android:text="开始下载" />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
