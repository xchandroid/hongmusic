<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@drawable/profile_bg"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
<ImageView
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:id="@+id/noti_cover"
    android:src="@drawable/music_ic"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:id="@+id/noti_geming"
            android:textSize="15sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxEms="10"
            android:textColor="#000000"
            android:text="想象之中"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noti_geshou"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:text="许嵩"
            />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:id="@+id/noti_pre"
        android:src="@drawable/play_btn_prev_selector"/>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:id="@+id/noti_play"
        android:src="@drawable/play_btn_play_pause_selector"/>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:id="@+id/noti_next"
        android:src="@drawable/play_btn_next_selector"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="150dp"
        android:layout_gravity="end|bottom"
        android:gravity="bottom"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="宏晨音乐--by:"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:scaleType="centerInside"
            android:src="@drawable/qianming"/>
    </LinearLayout>
</FrameLayout>